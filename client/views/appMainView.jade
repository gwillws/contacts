template(name="appMainView")
    +famousContext id='mainCtx'
        //
            our main content - the content part of the header/footer template is rendered with a
            render controller. new/update contact forms are rendered with this controller
        +HeaderFooterLayout size="[undefined,undefined]" headerSize="50" footerSize="0"
            +View target="header" size="[undefined,undefined]" template="header"
            +View target="content" size="[undefined,undefined]" template="rcHeadFootContent"

        //
            these are our modals (pop-ups) - we pre-render them as hidden and just hide/unhide to 'pop' them up.
            This makes the rendering very fast.  contact view is long so we make it scrollable. all content is
            reactive anyway so pre-rendering is OK. The new content is present in the view before the 'pop'. So it
            appears we are building and rendering the view from scratch each time, though we are not.
        +View id = "cvv" modifier="Modifier" proportions="[.9,.8]" origin="[.5,.5]" align="[.5,.5]" opacity=".9"
           +Scrollview id="sv" size="[undefined,undefined]"
                +Surface id="cv"  template="contactView" size="[undefined,true]" watchSize=true class="pop hide"
        +Surface id='alert' template="alert" size="[200,200]" origin="[.5,.5]" align="[.5,.5]" class="hide alert"
        +Surface id='loginForm' template="login" proportions="[.8,.7]" origin="[.5,.5]" align="[.5,.5]" class="hide pop"
        +Surface id='profileForm' template="profile" proportions="[.8,.7]" origin="[.5,.5]" align="[.5,.5]" class="hide pop"
        +Surface id='passwordForm' template="password" proportions="[.8,.7]" origin="[.5,.5]" align="[.5,.5]" class="hide pop"
        //
            New account form is long so we make it scrollable
        +View id = "accountForm" modifier="Modifier" proportions="[.9,.8]" origin="[.5,.5]" align="[.5,.5]"
            +Scrollview id="asv" size="[undefined,undefined]"
                +Surface id='af' template="newaccount" size="[undefined,true]" watchSize=true class="hide pop"

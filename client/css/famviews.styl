/* CSS declarations go here */
flatui-turquoise = #1abc9c
flatui-greensea = #16a085
flatui-emerald = #2ecc71
flatui-nephritis = #27ae60
flatui-peterriver = #3498db
flatui-belizehole = #2980b9
flatui-amethyst = #9b59b6
flatui-wisteria = #8e44ad
flatui-wetasphalt = #34495e
flatui-midnightblue = #2c3e50
flatui-sunflower = #f1c40f
flatui-orange = #f39c12
flatui-carrot = #e67e22
flatui-pumpkin = #d35400
flatui-alizarin = #e74c3c
flatui-pomegranate = #c0392b
flatui-clouds = #ecf0f1
flatui-silver = #bdc3c7
flatui-concrete = #95a5a6
flatui-asbestos = #7f8c8d

@import 'nib'
body
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight: 300
  color: flatui-midnightblue
  -webkit-user-select: none
  line-height: 1.5em
  background: flatui-clouds
  .container
    width: 100%
    height: 100%
    padding: 1.5em 0.75em

    max-width: 1200px
    margin: 0 auto

.backing
  background-color darkslategrey

.header
.footer
  background-color flatui-belizehole
  color black
  line-height 50px
  font-size xx-large
  padding-left 10px
  padding-right 20px
  color #ffffff
  text-align right

.login
  background-color flatui-belizehole
  color white
  line-height 25px
  text-align center
  font-size large
  border-bottom-left-radius 10px
  border-bottom-right-radius 10px
  cursor: pointer
.status
  background-color flatui-belizehole
  color white
  line-height 25px
  text-align center
  font-size large
  border-radius 10px

.offline
  background-color red


.bg-darkgray
  background-color darkgray
.bg-red
  background-color red
.header-icon
  color: grey
  padding-left 10px
  padding-top 10px
  cursor: pointer
  font-size large
  a
    color grey
    text-decoration none
  a:hover
    color grey

.footbtn
  z-index: 20
  cursor: pointer
  font-size large
  text-align center
  line-height 30px


.taskData
  text-align:  left
  font-size: medium;
  color: white
  width: 100%
  padding-left: 5px

.task
  background-color: #ffffff
  height: 100%


.hide
  display: none
.headText
  color white
  z-index: 20
  font-size x-large
  text-align center
  line-height 50px

.userText
  color white
  z-index: 20
  font-size large
  text-align center
  line-height 50px

.navText
  color white
  z-index: 20
  font-size x-large
  text-align right
  line-height 50px
  cursor: pointer

.headerData
  border: solid 2px black
  background-color flatui-peterriver


.headArrows
  color #0000ff
  z-index: 20
  font-size x-large
  text-align right
  line-height 50px
  cursor: pointer

.sidebar
  text-align center
  padding-top 10px
  cursor: pointer

.sidebarback
  background-color flatui-peterriver
  border-radius 10px
  border solid grey 2px
.pop
  background-color flatui-clouds
  border-radius 20px
  border solid #000000 2px
  padding-left 10px
  padding-top 10px
  font-size large


.alert
  background-color flatui-sunflower
  border-radius 20px
  border solid #000000 1px
  padding-left 10px
  padding-top 10px

  text-align center

.contactItem
  border solid 1px flatui-belizehole
  border-right solid 10px
  border-bottom solid 4px
  min-height 80px
.active
  border-right-color #008000
.mine
  border-bottom-color #add8e6
.public
  border-bottom-color flatui-belizehole
.inactive
  border-right-color lightgray
hr
  border-color black
